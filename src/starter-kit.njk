      },
      "pricing":{ "model":"deferred", "display":"none-before-checkout", "messageKey":"shipping.pricing.deferred" }
    },
    "messages":{
      "en":{ "shipping.pricing.deferred":"Shipping cost is shown at checkout after address and method are confirmed." },
