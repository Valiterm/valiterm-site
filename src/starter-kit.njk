  <script type="application/valiterm+json" id="shipping-matrix-json">
  {
    "@context": ["https://valiterm.org", "https://schema.org"],
    "@type":"ShippingMatrix",
    "@id":"#shipping-matrix",
    "version":"1.0",
    "services":[
      { "code":"B2C_SERVICE_POINT", "label":"Parcel – Pickup point" },
      { "code":"B2C_HOME",          "label":"Parcel – Home delivery" },
      { "code":"B2B_PARCEL",        "label":"Parcel – Business" },
      { "code":"BULKY",             "label":"Bulky" }
    ],
    "logic":{
      "readiness":{
        "requireReadyForDispatch": true,
        "readyAt":{ "formula":"max(orderAcceptedAt + processing.sla, warehouse.pickingDoneAt, machining.doneAt)" }
      },
      "cutoff":{
        "parcel":{ "appliesTo":["B2C_SERVICE_POINT","B2B_PARCEL"], "time":"12:00", "timezone":"Europe/Stockholm", "rule":"acceptedBeforeIsDay0", "clockAnchor":"readiness.readyAt" },
